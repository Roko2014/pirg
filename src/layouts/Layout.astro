---
import '../styles/global.css';

interface Props {
	title?: string;
}
const { title = 'Incubadoras RSM' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.cdnfonts.com/css/glacial-indifference" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700&display=swap" rel="stylesheet" />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 antialiased">
		<slot />
	</body>
</html>