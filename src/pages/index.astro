---
import Layout from '../layouts/Layout.astro';
import productosData from '../productos.json';

const { productos } = productosData;

// Mapeo: valor del botón → categorías de producto que se muestran
const categoriaMap: Record<string, string[]> = {
	'': [], // Todos: se tratan aparte
	'Termostatos': ['termostatos'],
	'Resistencias': ['Resistencias'],
	'Humidificadores': ['Humidificadores'],
	'Motores Volteo': ['Motores de volteo'],
	'Charolas': ['Charolas'],
	'Ventiladores': ['Ventiladores'],
	'Termómetro Higrómetro': [],
	'Otros': ['Ovoscopía'],
};
---

<Layout title="Incubadoras RSM | Catálogo Profesional">
	<nav class="text-black py-4 shadow-xl" style="background: linear-gradient(90deg, #cdffd8, #94b9ff);">
		<div class="container mx-auto px-6 flex flex-wrap justify-between items-center gap-4">
			<span class="text-2xl font-bold tracking-tighter text-black">Envíos a todo México <span class="text-slate-800"></span></span>
			<a
				href="https://wa.me/525565224522"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center gap-2 bg-[#25D366] text-white px-4 py-2 rounded-lg font-semibold hover:bg-[#20bd5a] transition shadow-lg"
			>
				<svg class="w-6 h-6 shrink-0" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
					<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
				</svg>
				<span>Cotiza y ordena aquí 5565224522</span>
			</a>
			<div class="space-x-6 hidden md:block">
				<a href="#" class="text-black hover:text-slate-700 transition">Inicio</a>
				<a href="#" class="text-black hover:text-slate-700 transition font-bold border-b-2 border-slate-800">Catálogo</a>
				<a href="#" class="text-black hover:text-slate-700 transition">Contacto</a>
			</div>
		</div>
	</nav>

	<header class="text-black py-16 text-center" style="background: linear-gradient(90deg, #cdffd8, #94b9ff);">
		<h1 class="text-5xl font-extrabold mb-4" style="font-family: 'Glacial Indifference', sans-serif;">Proyectos de Incubación Río Grande</h1>
		<p class="text-xl text-black" style="font-family: 'Lora', serif;">El éxito comienza desde el nido</p>
	</header>

	<section class="bg-white/70 backdrop-blur border-b border-slate-200">
		<div class="container mx-auto px-6 py-5">
			<div class="flex items-center justify-between gap-4 flex-wrap">
				<h2 class="text-sm font-semibold tracking-wide text-slate-700 uppercase">Categorías</h2>
				<div class="flex flex-wrap gap-2" id="filtro-categorias">
					<button type="button" class="categoria-btn px-3 py-1.5 rounded-full text-sm font-medium bg-slate-900 text-white hover:bg-blue-600 transition" data-categoria="">Todos</button>
					<button type="button" class="categoria-btn px-3 py-1.5 rounded-full text-sm font-medium bg-slate-100 text-slate-800 hover:bg-slate-200 transition" data-categoria="Termostatos">Termostatos</button>
					<button type="button" class="categoria-btn px-3 py-1.5 rounded-full text-sm font-medium bg-slate-100 text-slate-800 hover:bg-slate-200 transition" data-categoria="Resistencias">Resistencias</button>
					<button type="button" class="categoria-btn px-3 py-1.5 rounded-full text-sm font-medium bg-slate-100 text-slate-800 hover:bg-slate-200 transition" data-categoria="Humidificadores">Humidificadores</button>
					<button type="button" class="categoria-btn px-3 py-1.5 rounded-full text-sm font-medium bg-slate-100 text-slate-800 hover:bg-slate-200 transition" data-categoria="Motores Volteo">Motores Volteo</button>
					<button type="button" class="categoria-btn px-3 py-1.5 rounded-full text-sm font-medium bg-slate-100 text-slate-800 hover:bg-slate-200 transition" data-categoria="Charolas">Charolas</button>
					<button type="button" class="categoria-btn px-3 py-1.5 rounded-full text-sm font-medium bg-slate-100 text-slate-800 hover:bg-slate-200 transition" data-categoria="Ventiladores">Ventiladores</button>
					<button type="button" class="categoria-btn px-3 py-1.5 rounded-full text-sm font-medium bg-slate-100 text-slate-800 hover:bg-slate-200 transition" data-categoria="Termómetro Higrómetro">Termómetro Higrómetro</button>
					<button type="button" class="categoria-btn px-3 py-1.5 rounded-full text-sm font-medium bg-slate-100 text-slate-800 hover:bg-slate-200 transition" data-categoria="Otros">Otros</button>
				</div>
			</div>
		</div>
	</section>

	<main class="container mx-auto px-6 py-12">
		<div id="categorias" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 scroll-mt-24">
			{productos.map((producto) => (
				<div class="producto-card group bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 border border-slate-100 flex flex-col" data-categoria={producto.categoria}>
					<div class="h-48 bg-slate-200 flex items-center justify-center relative overflow-hidden">
						<img
							src={`/imagenes_productos/${producto.imagen}`}
							alt={producto.nombre}
							class="w-full h-full object-cover"
						/>
						<div class="absolute top-4 right-4 bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded-full uppercase">
							{producto.categoria}
						</div>
					</div>
					
					<div class="p-6 flex-grow flex flex-col">
						<h2 class="text-xl font-bold text-slate-800 mb-2 group-hover:text-blue-600 transition-colors">
							{producto.nombre}
						</h2>
						<p class="text-slate-600 text-sm mb-4 line-clamp-2">
							{producto.descripcion_corta}
						</p>
						
						<div class="mt-auto pt-4 border-t border-slate-50 flex justify-between items-center">
							<span class="text-3xl font-black text-slate-900">
								${producto.precio}
							</span>
							<a href={`/producto/${producto.id}`} class="bg-slate-900 text-white px-5 py-2 rounded-lg font-semibold hover:bg-blue-600 transition-all active:scale-95 shadow-lg shadow-blue-100 text-center">
								Ver detalles
							</a>
						</div>
					</div>
				</div>
			))}
		</div>
	</main>

	<footer class="bg-slate-50 border-t border-slate-200 py-12 mt-20">
		<div class="container mx-auto px-6 text-center text-slate-500">
			<p>© 2026 Incubadoras RSM - Tecnología para la vida.</p>
		</div>
	</footer>

	<script define:vars={{ categoriaMap }}>
		const cards = document.querySelectorAll('.producto-card');
		const btns = document.querySelectorAll('.categoria-btn');

		btns.forEach((btn) => {
			btn.addEventListener('click', () => {
				const filtro = btn.getAttribute('data-categoria');

				btns.forEach((b) => {
					b.classList.remove('bg-slate-900', 'text-white');
					b.classList.add('bg-slate-100', 'text-slate-800');
				});
				btn.classList.add('bg-slate-900', 'text-white');
				btn.classList.remove('bg-slate-100', 'text-slate-800');

				const categoriasMostrar = filtro === '' ? null : (categoriaMap[filtro] || []);

				cards.forEach((card) => {
					const cat = card.getAttribute('data-categoria');
					const mostrar = categoriasMostrar === null || (Array.isArray(categoriasMostrar) && categoriasMostrar.includes(cat));
					card.style.display = mostrar ? '' : 'none';
				});
			});
		});
	</script>
</Layout>