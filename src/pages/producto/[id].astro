---
import Layout from '../../layouts/Layout.astro';
import productosData from '../../productos.json';

export function getStaticPaths() {
	const { productos } = productosData;
	return productos.map((producto) => ({
		params: { id: String(producto.id) },
		props: { producto },
	}));
}

const { producto } = Astro.props;
const especificaciones = producto.especificaciones || {};
const entries = Object.entries(especificaciones);
---

<Layout title={`${producto.nombre} | Incubadoras RSM`}>
	<nav class="text-black py-4 shadow-xl" style="background: linear-gradient(90deg, #cdffd8, #94b9ff);">
		<div class="container mx-auto px-6 flex flex-wrap justify-between items-center gap-4">
			<span class="text-2xl font-bold tracking-tighter text-black">INCUBADORAS <span class="text-slate-800">RSM</span></span>
			<a
				href="https://wa.me/525565224522"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center gap-2 bg-[#25D366] text-white px-4 py-2 rounded-lg font-semibold hover:bg-[#20bd5a] transition shadow-lg"
			>
				<svg class="w-6 h-6 shrink-0" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
					<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
				</svg>
				<span>Cotiza y ordena aquí 5565224522</span>
			</a>
			<div class="space-x-6 hidden md:block">
				<a href="/" class="text-black hover:text-slate-700 transition">Inicio</a>
				<a href="/#categorias" class="text-black hover:text-slate-700 transition font-bold border-b-2 border-slate-800">Catálogo</a>
				<a href="#" class="text-black hover:text-slate-700 transition">Contacto</a>
			</div>
		</div>
	</nav>

	<main class="container mx-auto px-6 py-12">
		<a href="/#categorias" class="inline-flex items-center gap-2 text-slate-600 hover:text-blue-600 font-medium mb-8 transition">
			<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
			Volver al catálogo
		</a>

		<article class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden border border-slate-100">
			<div class="grid md:grid-cols-2 gap-0">
				<div class="aspect-square md:min-h-[400px] bg-slate-100">
					<img
						src={`/imagenes_productos/${producto.imagen}`}
						alt={producto.nombre}
						class="w-full h-full object-cover"
					/>
				</div>
				<div class="p-8 md:p-10 flex flex-col">
					<span class="text-sm font-semibold text-blue-600 uppercase tracking-wide">{producto.categoria}</span>
					<h1 class="text-3xl font-bold text-slate-900 mt-2 mb-4">{producto.nombre}</h1>
					<p class="text-slate-600 text-lg mb-6">{producto.descripcion_corta}</p>
					<p class="text-4xl font-black text-slate-900 mb-8">${producto.precio}</p>

					<h2 class="text-lg font-bold text-slate-800 mb-4 border-b border-slate-200 pb-2">Especificaciones</h2>
					<dl class="space-y-3">
						{entries.map(([nombre, valor]) => (
							<div class="flex justify-between gap-4 py-2 border-b border-slate-50">
								<dt class="text-slate-600 font-medium">{nombre}</dt>
								<dd class="text-slate-900 font-semibold text-right">{valor}</dd>
							</div>
						))}
					</dl>
					{entries.length === 0 && (
						<p class="text-slate-500 italic">No hay especificaciones disponibles.</p>
					)}
				</div>
			</div>
		</article>
	</main>

	<footer class="bg-slate-50 border-t border-slate-200 py-12 mt-20">
		<div class="container mx-auto px-6 text-center text-slate-500">
			<p>© 2026 Incubadoras RSM - Tecnología para la vida.</p>
		</div>
	</footer>
</Layout>
